generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String       @id @default(cuid())
  createdAt    DateTime     @default(now())
  credentials  Credential[]
  ownedTodos   Todo[]       @relation("OwnerTodos")
  sharedTodos  Todo[]       @relation("SharedTodos")
  initiatedCalls CallSession[] @relation("CallInitiator")
  receivedCalls  CallSession[] @relation("CallRecipient")
  sentSignals    CallSignal[]  @relation("CallSignalSender")
  receivedSignals CallSignal[] @relation("CallSignalRecipient")
  blockedUsers   UserShareBan[] @relation("ShareBanBlocker")
  blockedByUsers UserShareBan[] @relation("ShareBanBlocked")
}

model Credential {
  id           String  @id @default(cuid())
  credentialId String  @unique
  publicKey    String
  counter      Int
  transports   String?
  userId       String
  user         User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Todo {
  id               String    @id @default(cuid())
  text             String
  description      String
  completed        Boolean   @default(false)
  dueAt            DateTime?
  startMeetingBeforeMin Int  @default(0)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  ownerId          String
  owner            User      @relation("OwnerTodos", fields: [ownerId], references: [id], onDelete: Cascade)
  sharedWithUserId String?
  sharedWith       User?     @relation("SharedTodos", fields: [sharedWithUserId], references: [id], onDelete: SetNull)
  callSession      CallSession?

  @@index([ownerId])
  @@index([sharedWithUserId])
}

model CallSession {
  id              String       @id @default(cuid())
  todoId          String       @unique
  todo            Todo         @relation(fields: [todoId], references: [id], onDelete: Cascade)
  initiatorUserId String
  initiator       User         @relation("CallInitiator", fields: [initiatorUserId], references: [id], onDelete: Cascade)
  recipientUserId String
  recipient       User         @relation("CallRecipient", fields: [recipientUserId], references: [id], onDelete: Cascade)
  status          String       @default("active")
  startedAt       DateTime     @default(now())
  endedAt         DateTime?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  signals         CallSignal[]

  @@index([initiatorUserId])
  @@index([recipientUserId])
  @@index([status])
}

model CallSignal {
  id            String      @id @default(cuid())
  callSessionId String
  callSession   CallSession @relation(fields: [callSessionId], references: [id], onDelete: Cascade)
  fromUserId    String
  fromUser      User        @relation("CallSignalSender", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUserId      String
  toUser        User        @relation("CallSignalRecipient", fields: [toUserId], references: [id], onDelete: Cascade)
  payload       String
  createdAt     DateTime    @default(now())
  deliveredAt   DateTime?

  @@index([callSessionId])
  @@index([toUserId, deliveredAt])
}

model UserShareBan {
  id            String   @id @default(cuid())
  blockerUserId String
  blockedUserId String
  createdAt     DateTime @default(now())
  blocker       User     @relation("ShareBanBlocker", fields: [blockerUserId], references: [id], onDelete: Cascade)
  blocked       User     @relation("ShareBanBlocked", fields: [blockedUserId], references: [id], onDelete: Cascade)

  @@unique([blockerUserId, blockedUserId])
  @@index([blockerUserId])
  @@index([blockedUserId])
}
